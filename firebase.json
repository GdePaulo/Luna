{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
      "source": "/api/time",
      "run": {
        "serviceId": "luna-cloud-run",
        "region": "europe-west4"
      }
      },
      {
      "source": "**",
      "destination": "/index.html"
      }]
  }
}
